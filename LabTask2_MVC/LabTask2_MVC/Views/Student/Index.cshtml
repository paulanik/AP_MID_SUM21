@{
    ViewBag.Title = "Home Page";
}
@model List<LabTask2_MVC.Models.Student>

<h3>Student List</h3><br />
<button><a class="btn btn-success" href="/Student/Create">Add new student</a></button>
<div class="container">
    <table class="table table-condensed">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Credit</th>
            <th>CGPA</th>
            @*<th>Dept_Id</th>*@
            <th></th>
            <th></th>
        </tr>
        @foreach (var student in @Model)
        {
    <tr>
        <td>@student.ID</td>
        <td>@student.Name</td>
        <td>@student.DOB.ToShortDateString()</td>
        <td>@student.Credit</td>
        <td>@student.CGPA</td>
        @*<td>@student.Dept_Id</td>*@
        <td><a class="btn btn-success" href="/Student/Edit/@student.ID">Edit</a></td>
        <td><a class="btn btn-danger">Delete</a></td>
    </tr>}

    </table>
</div>